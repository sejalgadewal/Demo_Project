<%= simple_form_for(@course) do |f|%>
<%= f.error_notification %>

<div class="field">
  <div class="control">
    <%= f.input :title, label: " Course Title",input_html: {class: "textarea"}, wrapper: false, label_html: {class: "label"}, placeholder: "Add title of course......", autofocus: true %>
  </div>
</div>

<div class="field">
  <div class="control">
    <%= f.input :description, label: " Course Description",input_html: {class: "textarea"}, wrapper: false, label_html: {class: "label"}, placeholder: "About desciption of course......", autofocus: true %>
  </div>
</div>

<div class="field">
  <div class="control">
  <%= f.label :Upload_File%>
 
    <%= f.file_field :documents, multiple: true, accept: 'application/pdf' %>
   
  </div>
</div>




<%= f.button :submit, class: "button is-info" %>
<%end%>
