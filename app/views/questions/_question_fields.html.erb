<div style="text-align: center;">
  <div style="display: inline-block; background-color: #f0f0f0; padding: 20px;">
  <br>
  <%= form_with(model: [quiz, @question], local: true) do |form| %>
    <div class="question">
      <%= form.label :content, "Enter Question" %>
      <%= form.text_area :content %>
      <br><br>
      <% 1.upto(4) do |i| %>
        <%= form.label "answer#{i}", "Option #{i}" %>
        <%= form.text_field "answer#{i}", class: "form-control mb-3" %> <br>
      <% end %>

      <%= form.label :correct, "Correct Answer" %>
      <%= form.select :correct, (1..4).to_a, {}, class: "form-control mb-3" %>
      <br><br>
      <%= form.submit 'Create Question', style: "background-color: #4CAF50; color: white; padding: 10px 20px; border: none; border-radius: 4px; cursor: pointer;" %>
    </div>
  <%end %>
  </div>
</div>

<div class="content" style="display: inline-block; margin-left: 10px;">
  <%= link_to "Back to Lectures", course_mylecture_path(@course), class: 'btn btn-secondary' %>
</div> 

<div class="content" style="display: inline-block; margin-left: 10px;">
  <%#= link_to "Back to All Question", quiz_questions_path(quiz), class: 'btn btn-secondary' %>
</div> 
